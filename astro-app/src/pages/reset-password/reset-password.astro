---
import '../../styles/global.css';
---

<html lang="fr">
<head>
  <meta charset="utf-8" />
  <title>R√©initialisation du mot de passe</title>
</head>
<body class="bg-gradient-to-br from-emerald-400 to-teal-600 min-h-screen flex items-center justify-center">
  <div class="bg-white p-8 rounded-2xl shadow-xl w-full max-w-md">
    <h2 class="text-xl font-bold mb-4">üîê Nouveau mot de passe</h2>
    <form id="resetForm" class="space-y-4">
      <input type="password" id="password" placeholder="Nouveau mot de passe"
             class="w-full border p-2 rounded-md" required />
      <button type="submit"
              class="w-full py-2 bg-emerald-500 text-white font-bold rounded-md hover:bg-emerald-600">
        R√©initialiser
      </button>
    </form>
    <p id="message" class="mt-4 text-center text-gray-700"></p>
  </div>

  <script>
    // üëâ Code ex√©cut√© seulement c√¥t√© client
    const params = new URLSearchParams(window.location.search);
    const token = params.get("token");

    document.getElementById("resetForm").addEventListener("submit", async (e) => {
      e.preventDefault();
      const password = document.getElementById("password").value;
      console.log("Payload envoy√©:", { token: token, new_password: password });

      const res = await fetch("http://localhost:8080/auth/reset-password", {
        method: "POST",
        headers: {"Content-Type": "application/json"},
        body: JSON.stringify({ token: token, new_password: password })
      });

      const data = await res.json();
      document.getElementById("message").innerText = data.message || data.detail;

      if (res.ok) {
        window.location.href = "/connexion/connexion";
      }
    });
  </script>
</body>
</html>
